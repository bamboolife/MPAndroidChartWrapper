<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="96dp"
    android:minHeight="104dp"
    android:orientation="vertical"
    android:padding="4dp"
    android:paddingStart="8dp"
    android:paddingTop="5dp"
    android:paddingEnd="8dp"
    android:paddingBottom="5dp"
    android:background="@drawable/shape_markerview_bg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="时间"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tch_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/mp_placeholder"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="开"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tch_tv_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/mp_placeholder"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="高"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tch_tv_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/mp_placeholder"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="低"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tch_tv_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/mp_placeholder"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="收"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tch_tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/mp_placeholder"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="涨跌额"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tch_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/mp_placeholder"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="涨跌幅"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tch_tv_amountRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/mp_placeholder"
            android:textColor="@color/mp_marker_txtColor"
            android:textSize="10sp" />
    </FrameLayout>

</LinearLayout>
